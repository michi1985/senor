<div class="row">
  <%= search_form_for @q do |f| %>

  <div class="form-horizontal">

    <div class="form-group">

      <%= f.label :customer_customer_name_cont, "会社名", class:"control-label col-md-1" %>
      <div class="col-md-3">
        <%= f.collection_select :customer_customer_name_cont, Customer.all.order("id desc"), :customer_name, :customer_name, {include_blank: true}, {class:"form-control"} %>
      </div>

      <%= f.label :store_name_cont, "店舗名", class:"control-label col-md-1" %>
      <div class="col-md-3">
        <%= f.search_field :store_name_cont, class:"form-control" %>
      </div>

    <%= f.label :ip_address_cont, "IPアドレス", class:"control-label col-md-1" %>
    <div class="col-md-3">
      <%= f.search_field :ip_address_cont, class:"form-control" %>
    </div>
  </div>

    <div class="form-group">
      <div class="col-md-12 text-right">
        <%= link_to "クリア", stores_path, class:"btn btn-default" %>
        <%= f.submit "検索", class:"btn btn-primary" %>
      </div>
    </div>
  </div>

  <% end %>
</div>
