<%= form_for @customer do |f| %>
  <%= render 'layouts/errMsg', obj: @customer %>

  <table class="table table-bordered ">
    <tbody>
      <div class="form-group">
        <tr>
          <td class="create-form text-right"><%= f.label :image, class:"control-label" %></td>
          <td><%= f.file_field :image, class:"form-control" %></td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right"><%= f.label :customer_name, class:"control-label" %></td>
          <td><%= f.text_field :customer_name, class:"form-control" %></td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label :business, class:"control-label" %>
          </td>
          <td>
            <!-- select のクラス設定ができないので参考にしたURL：http://yamadagenki.hatenablog.com/entry/2015/12/27/022921 -->
            <%= f.select :business, ["ドラッグストア", "スーパーマーケット", "総合スーパー", "アパレル", "専門店", "コンビニ", "その他"], {}, { autofocus: 'true', class: 'form-control'} %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td rowspan="4" ,="," class="active text-right">
            <b>住所</b>
          </td>
          <td>
            <%= f.label :postal_code, class:"control-label" %>
            <%= f.text_field :postal_code, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td>
            <%= f.label :prefectures, class:"control-label" %>
            <%= f.text_field :prefectures, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td>
            <%= f.label :city, class:"control-label" %>
            <%= f.text_field :city, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td>
            <%= f.label :town_name, class:"control-label" %>
            <%= f.text_field :town_name, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label :phone_number, class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :phone_number, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label :fax_number, class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :fax_number, class:"form-control" %>
          </td>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <td class="active text-right">
            <%= f.label :url, class:"control-label" %>
          </td>
          <td>
            <%= f.text_field :url, class:"form-control" %>
          </td>
        </tr>
      </div>

    </tbody>
  </table>

  <div class="actions col-md-offset-9 col-md-3">
    <%= f.submit class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
